{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All Services",
      "dependsOn": [
        "Mock Stripe SPT",
        "Seller Backend",
        "Chat Backend",
        "Chat Frontend"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Mock Stripe SPT",
      "type": "shell",
      "command": "cd mock_stripe_spt && if [ ! -d venv ]; then python3 -m venv venv; fi && source venv/bin/activate && pip install -q -r requirements.txt && python server.py",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Seller Backend",
      "type": "shell",
      "command": "cd seller_backend && npm install --silent && npm run build && npm start",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Chat Backend",
      "type": "shell",
      "command": "cd chat_backend && source venv/bin/activate 2>/dev/null || (python3 -m venv venv && source venv/bin/activate && pip install -q -r requirements.txt) && python server.py",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Chat Frontend",
      "type": "shell",
      "command": "cd chat_frontend && python3 -m http.server 8000",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}

