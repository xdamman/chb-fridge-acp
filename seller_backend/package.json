{
  "name": "acp-seller-backend",
  "version": "1.0.0",
  "description": "Simple demo server for Agentic Commerce Protocol",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node server.ts",
    "dev:watch": "nodemon --exec ts-node server.ts",
    "generate:types": "openapi-typescript openapi.agentic_checkout.yaml -o types/openapi.d.ts",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "openapi-typescript": "^7.10.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
